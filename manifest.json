{
  "manifest_version": 2,

  "name": "NeoCache",
  "description": "Caching of the future TM",
  "version": "1.0",
  "options_page": "options.html",
  "icons": {
    "128": "images/new_icon.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["lib/drop/drop-theme-arrows-bounce.css"],
      "js": [
        "lib/jquery/jquery-1.11.2.min.js",
        "lib/parse/parse-1.3.4.min.js",
        "lib/drop/drop-0.5.5.min.js",
        "payloader.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon-grey.png",
      "38": "images/new_icon_38x38.png"
    },
    "default_title": "Toggle Neocache"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://*/"
  ],

  "web_accessible_resources": [
    "images/payload-icon.png"
  ]
}
